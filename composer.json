{
    "name": "oliverkroener/ok-ai-writer",
    "type": "typo3-cms-extension",
    "description": "AI Text Generator for CKEditor in TYPO3 - Azure OpenAI integration",
    "license": "GPL-2.0-or-later",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Oliver Kroener",
            "email": "ok@oliver-kroener.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "typo3/cms-core": "^10.4 || ^11.5",
        "typo3/cms-rte-ckeditor": "^10.4 || ^11.5"
    },
    "keywords": [
        "typo3",
        "typo3-extension",
        "ckeditor",
        "ckeditor4",
        "ai",
        "openai",
        "azure-openai",
        "text-generation",
        "translation",
        "lorem-ipsum"
    ],
    "autoload": {
        "psr-4": {
            "OliverKroener\\OkAiWriter\\": "Classes/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "ok_ai_writer"
        }
    }
}
